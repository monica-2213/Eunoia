<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/drawerLayout"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            >
        </androidx.appcompat.widget.Toolbar>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20sp"
        android:padding="40dp"
        android:rowCount="5"
        android:columnCount="1">

        <Button
            android:drawableLeft="@drawable/fist"
            android:drawableRight="@drawable/fist"
            android:id="@+id/btnMotivation"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="16sp"
            android:layout_margin="5sp"
            android:text="Motivation" />

        <Button
            android:drawableLeft="@drawable/track"
            android:drawableRight="@drawable/track"
            android:id="@+id/btnTracker"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="16sp"
            android:layout_margin="5sp"
            android:text="Tracker" />

        <Button
            android:drawableLeft="@drawable/recicon"
            android:drawableRight="@drawable/recicon"
            android:id="@+id/btnRecommendation"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="14sp"
            android:layout_margin="5sp"
            android:text="Recommendation" />

        <Button
            android:drawableLeft="@drawable/information"
            android:drawableRight="@drawable/information"
            android:id="@+id/btnHelp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="16sp"
            android:layout_margin="5sp"
            android:text="Help" />

        <Button
            android:drawableLeft="@drawable/emergency1"
            android:drawableRight="@drawable/emergency1"
            android:id="@+id/btnEmergency"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="16sp"
            android:layout_margin="5sp"
            android:text="Emergency" />

    </GridLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_home"
        />

</androidx.drawerlayout.widget.DrawerLayout>
