<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".YogaType2" >

    <TextView
        android:id="@+id/TVYoga2"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"

        android:fontFamily="@font/poppins_semibold"
        android:text="CHILD'S POSE  "
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <TextView
        android:id="@+id/TVInstructions"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVYoga2"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Instructions : "
        android:textColor="@color/soft_purple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVYoga2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TVStep1"
        android:layout_width="374dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/IVYoga2Pose1"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:padding="5dp"
        android:paddingBottom="5dp"
        android:text=" 1. Sit on your heels, knees spread mat distance apart and bring your head towards the floor."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVYoga2"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/TVStep2"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/IVYoga2Pose2"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text=" 2. Your arms can be either stretched out to the front, by your side or hands underneath your forehead."
        android:textColor="#000000"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TVStep1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TVStep1"
        app:layout_constraintTop_toBottomOf="@+id/TVStep1"
        app:layout_constraintVertical_bias="0.049" />

    <TextView
        android:id="@+id/TVStep3"
        android:layout_width="374dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/IVYoga2Pose3"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="3. Breathe into your lower back."
        android:textColor="#000000"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TVStep2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/TVStep2"
        app:layout_constraintTop_toBottomOf="@+id/TVStep2"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:layout_below="@+id/IVYoga2Pose4"
        android:id="@+id/TVStep4"
        android:layout_width="374dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="4. Stay for anywhere between 30 seconds and several minutes in this resting pose."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TVStep3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TVStep3"
        app:layout_constraintTop_toBottomOf="@+id/TVStep3"
        app:layout_constraintVertical_bias="0.087" />

    <TextView
        android:layout_below="@+id/IVYoga2Pose5"
        android:id="@+id/TVStep5"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="5. To come out, exhale and roll up vertebra by vertebra, or come back to sitting with a straight spine."
        android:textColor="#000000"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TVStep4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/TVStep4"
        app:layout_constraintTop_toBottomOf="@+id/TVStep4"
        app:layout_constraintVertical_bias="0.128" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnYoutubeLink2"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/TVStep5"
        android:background="@drawable/button2"
        android:text="Watch the tutorial!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956" />

    <ImageView
        android:layout_below="@+id/TVInstructions"
        android:id="@+id/IVYoga2Pose1"
        android:layout_width="415dp"
        android:layout_height="199dp"
        android:src="@drawable/img_3" />

    <ImageView
        android:layout_marginTop="25dp"
        android:layout_below="@+id/TVStep1"
        android:id="@+id/IVYoga2Pose2"
        android:layout_width="415dp"
        android:layout_height="199dp"
        android:src="@drawable/img_4" />

    <ImageView
        android:layout_marginTop="25dp"
        android:layout_below="@+id/TVStep2"
        android:id="@+id/IVYoga2Pose3"
        android:layout_width="415dp"
        android:layout_height="199dp"
        android:src="@drawable/img_5" />

    <ImageView
        android:id="@+id/IVYoga2Pose4"
        android:layout_width="415dp"
        android:layout_height="199dp"
        android:layout_below="@+id/TVStep3"
        android:layout_marginTop="25dp"
        android:src="@drawable/img_6" />

    <ImageView
        android:id="@+id/IVYoga2Pose5"
        android:layout_width="415dp"
        android:layout_height="199dp"
        android:layout_below="@+id/TVStep4"
        android:layout_marginTop="25dp"
        android:src="@drawable/img_7" />

</RelativeLayout>
</ScrollView>
