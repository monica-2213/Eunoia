<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".YogaType3"
    android:background="@drawable/img_1">

    <TextView
        android:id="@+id/TVYoga3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="HERO POSE  "
        android:textAlignment="center"
        android:textColor="#050404"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084" />

    <TextView
        android:id="@+id/TVInstructions"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Instructions : "
        android:textColor="@color/soft_purple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVYoga3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TVStep1"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:background="@drawable/textview"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text=" 1. Start in an all fours position on your hands
        and knees."
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVYoga3"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/TVStep2"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:background="@drawable/textview"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:padding="5dp"
        android:text=" 2. Bring your knees closer together and separate your feet slightly wider than hip distance apart."
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TVStep1"
        app:layout_constraintStart_toStartOf="@+id/TVStep1"
        app:layout_constraintTop_toBottomOf="@+id/TVStep1"
        app:layout_constraintVertical_bias="0.034" />

    <TextView
        android:id="@+id/TVStep3"
        android:layout_width="370dp"
        android:layout_height="85dp"
        android:background="@drawable/textview"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:padding="5dp"
        android:text="  3. Press the top of your feet down and slowly lower your hips back until eventually sitting on the mat (or props) between the heels."
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TVStep2"
        app:layout_constraintStart_toStartOf="@+id/TVStep2"
        app:layout_constraintTop_toBottomOf="@+id/TVStep2"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/TVStep4"
        android:layout_width="370dp"
        android:layout_height="93dp"
        android:background="@drawable/textview"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:padding="5dp"
        android:text="  4. Use your hands to roll the flesh of your calves away, draw your navel in and up, ground through your sitting bones and extend through the crown of your head."
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TVStep3"
        app:layout_constraintStart_toStartOf="@+id/TVStep3"
        app:layout_constraintTop_toBottomOf="@+id/TVStep3"
        app:layout_constraintVertical_bias="0.076" />

    <TextView
        android:id="@+id/TVStep5"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:background="@drawable/textview"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text=" 5. Stay for 5 to 10 breaths."
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TVStep4"
        app:layout_constraintStart_toStartOf="@+id/TVStep4"
        app:layout_constraintTop_toBottomOf="@+id/TVStep4"
        app:layout_constraintVertical_bias="0.086" />

    <TextView
        android:id="@+id/TVStep6"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/textview"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:padding="5dp"
        android:text="  6. Placing the hands in front of you and lifting the hips back up to all fours."
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/TVStep5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TVStep5"
        app:layout_constraintTop_toBottomOf="@+id/TVStep5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnYoutubeLink3"
        android:layout_width="174dp"
        android:layout_height="54dp"
        android:layout_marginTop="720dp"
        android:background="@drawable/button2"
        android:text="Watch the tutorial!"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>